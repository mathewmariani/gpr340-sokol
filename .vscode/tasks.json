{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "StartServer",
      "type": "process",
      "command": "${input:startServer}"
    },
    {
      "label": "SimpleBrowser",
      "command": "${input:openSimpleBrowser}",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "startServer",
      "type": "command",
      "command": "livePreview.runServerLoggingTask"
    },
    {
      "id": "openSimpleBrowser",
      "type": "command",
      "command": "simpleBrowser.show",
      "args": [
        "http://localhost:3000/build/assignments/${command:cmake.activeBuildPresetName}/${command:cmake.launchTargetFilename}"
      ]
    }
  ]
}